<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@string/fond"
    android:orientation="vertical" >

    <GridLayout >
        <TextView
	        android:id="@+id/acceuilTexte"
	        android:layout_width="@dimen/dimenssionCentre"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/gridLayout1"
	        android:layout_alignParentTop="true"
	        android:gravity="center"
	        android:text="Choisissez l&apos;action à effectuer"
	        android:textColor="@color/couleurTexte"
	        android:textSize="@dimen/tailleTexteEnHaut" />
	        
    </GridLayout>
    

    
    
    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="@dimen/dimenssionCentre"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:columnCount="1"
        android:rowCount="3" >

        <Button
            android:id="@+id/boutonAcceuilDevoiler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/bgBouton"
            android:text="Dévoiler une image"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/espaceBouton"
            android:layout_column="0"
            android:layout_row="1" />

        <Button
            android:id="@+id/boutonAcceuilDissimuler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boutonAcceuilDevoiler"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@color/bgBouton"
            android:text="@string/dissimulerDonneeMenu"
            android:textColor="@color/white" />
    </GridLayout>

</RelativeLayout>