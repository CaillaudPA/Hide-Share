<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@string/fond"
    android:id="@+id/choix_enveloppe">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texteChoixEnveloppe"
        android:text="Choisissez l'image dans laquelle cacher vos donnÃ©es"
        android:textColor="@color/couleurTexte"
        android:textSize="25sp"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/prendrePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logoappareilphoto"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repertoirephoto"
        android:src="@drawable/repertoirephoto"
        android:layout_alignBottom="@+id/prendrePhoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/prendrePhoto"
        android:scaleType="fitXY"
        android:layout_toEndOf="@+id/prendrePhoto"/>

</RelativeLayout>