<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choix_enveloppe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical"
    android:background="@drawable/fond">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Choisissez l&apos;image dans laquelle cacher vos donnÃ©es"
        android:textColor="@color/couleurTexte"
        android:textSize="@dimen/tailleTexteEnHaut" />

    <Button
        android:id="@+id/prendrePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@color/bgBouton"
        android:textColor="@color/white"
        android:src="@drawable/logoappareilphoto"
        android:text="photo" />

    <Button
        android:id="@+id/repertoirephoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/bgBouton"
        android:src="@drawable/repertoirephoto"
        android:text="galerie"
        android:textColor="@color/white" />

</LinearLayout>