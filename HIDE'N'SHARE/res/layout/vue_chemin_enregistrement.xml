<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vue_chemin_enregistrement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond" >

    <GridLayout
        android:layout_width="@dimen/dimenssionCentre"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:columnCount="1"
        android:rowCount="6" >

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="indiquer le nom du fichier à dévoiler suivis de l&apos;extension si possible"
            android:textColor="@color/couleurTexte"
            android:textSize="@dimen/tailleTexteEnHaut" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="2" />

        <EditText
            android:id="@+id/zoneSaisieVueCheminEnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@color/white"
            android:hint="" />
    </GridLayout>

    <Button
        android:id="@+id/boutonCheminEnregistrement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:background="@color/bgBouton"
        android:text="Valider"
        android:textColor="@color/white" />

</RelativeLayout>