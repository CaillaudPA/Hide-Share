<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@string/fond"
	android:id="@+id/vue_chemin_enregistrement">

	
	<GridLayout 
	    android:layout_alignParentTop="true"
		android:layout_centerInParent="true"
	    android:layout_width="@dimen/dimenssionCentre"
	    android:layout_height="wrap_content"
	    android:columnCount="1"
        android:rowCount="6" >
        
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0" />
	    
        <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="indiquer le nom du fichier à dévoiler suivis de l'extension si possible"
	        android:textColor="@color/couleurTexte"
	        android:textSize="@dimen/tailleTexteEnHaut"
	        android:layout_column="0"
            android:layout_row="1" />
    	<View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="2" />
        
        <EditText
            android:id="@+id/zoneSaisieVueCheminEnr"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_column="0"
            android:layout_row="3"
            android:hint=""/>        
    </GridLayout>
    
       	<Button
            android:id="@+id/boutonCheminEnregistrement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgBouton"
            android:text="Validé"
            android:textColor="@color/white"
	    	android:layout_alignParentBottom="true"/>
    	

</RelativeLayout>